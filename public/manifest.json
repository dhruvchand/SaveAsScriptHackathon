{
  "manifest_version": 2,
  "version": "0.0.2",
  "short_name": "Graph XRay",
  "name": "Graph XRay",
  "description": "Graph XRay",
  "browser_action": {
    "default_title": "Graph XRay",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.bundle.js"]
    }
  ],
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "options_page": "options.html",
  "permissions": ["<all_urls>","webRequest","webRequestBlocking", "activeTab", "storage", "tabs"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
